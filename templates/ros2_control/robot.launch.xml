<launch>
  <arg name="use_mock_hardware"
       default="false"
       description="Starting MockHW for offline testing instead of the real HW."/>

  <include file="$(find-pkg-share $RUNTIME_CONFIG_PKG_NAME$)/launch/$ROBOT_NAME$_control.launch.xml" >
     <arg name="use_mock_hardware" value="$(var use_mock_hardware)" />
     <arg name="mock_sensor_commands" value="false" />
     <arg name="sim_gazebo" value="false" />
     <arg name="launch_rviz" value="false" />
  </include>

  <!-- Activate rviz only if working with MockHW, usually on the development PC -->
  <include file="$(find-pkg-share $RUNTIME_CONFIG_PKG_NAME$)/launch/$ROBOT_NAME$_moveit.launch.py" >
     <arg name="sim_time" value="false" />
     <arg name="launch_rviz" value="$(var use_mock_hardware)" />
  </include>

  <!-- ADD HERE OTHER COMPONENTS FOR THE SCENARIO -->

</launch>
